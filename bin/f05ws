#!/usr/bin/env python3

import sys
import os
from fog05.svcs.fog05ws import Server
import tempfile
import signal

s = None


def genlty_close(signal, frame):
    if signal == signal.SIGINT:
        if s is not None:
            s.stop()
        exit(0)


if __name__ == '__main__':
    port = 9669
    auth = 'a1b2c3d4'
    if len(sys.argv) > 1:
        if sys.argv[1] == '--help' or sys.argv[1] == '-h' or sys.argv[1] == 'help':
            print('\nUSAGE:\n\tpython3 fog05ws -p port -a auth\n')
            exit(0)
        else:
            idx = 1
            len = len(sys.argv)
            while idx < len:
                if sys.argv[idx] == '-p':
                    port = sys.argv[idx + 1]
                    idx = idx + 2
                elif sys.argv[idx] == '-a':
                    auth = sys.argv[idx + 1]
                    idx = idx + 2
    global s
    s = Server(port, auth)
    signal.signal(signal.SIGINT, genlty_close)
    global s
    s.start()